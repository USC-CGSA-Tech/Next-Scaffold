{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "dist",
    "node_modules/*"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react-refresh"
  ],
  "extends": [
    "plugin:prettier/recommended",
    "react"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "parser": "@typescript-eslint/parser",
      "settings": {
        "react": {
          "version": "detect"
        }
      },
      "extends": [
        "plugin:react/recommended",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "no-console": "error"
      }
    }
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "import/internal-regex": "^@",
    "import/resolver": {
      "alias": {
        "map": [
          "@, ."
        ],
        "extensions": [
          ".tsx",
          ".ts",
          ".js",
          ".jsx"
        ]
      }
    }
  }
}